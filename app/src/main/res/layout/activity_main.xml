<LinearLayout xmlns:android="https://schemas.android.com/apk/res/android"
              xmlns:android2="http://schemas.android.com/apk/res/android"
              android:gravity="center"
              android:layout_height="fill_parent"
              android:layout_width="fill_parent"
              android:orientation="vertical"
              android2:layout_width="fill_parent"
              android2:layout_height="fill_parent"
              android2:orientation="vertical"
              android2:gravity="center">


    <TextView
        android2:layout_width="wrap_content"
        android2:layout_height="wrap_content"
        android2:text="Track my steps"
        android2:id="@+id/textView"
        android2:textSize="20sp"
        android2:textIsSelectable="true"
        android2:padding="20dp"
        android2:layout_gravity="center"/>

    <Button
        android2:layout_width="wrap_content"
        android2:layout_height="wrap_content"
        android2:text="Start"
        android2:id="@+id/buttonStart"
        android2:textSize="20sp"
        android2:padding="20dp"/>

    <Button
        android2:layout_width="wrap_content"
        android2:layout_height="wrap_content"
        android2:text="Stop"
        android2:id="@+id/buttonStop"
        android2:padding="20dp"
        android2:textSize="20sp"/>
</LinearLayout>
